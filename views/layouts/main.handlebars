        <ul class="navbar-nav">
          <li class="nav-item px-2">
            <a class="nav-link navbar-brand text-white" href="/">Home</a>
          </li>
          <li class= "nav-item px-2">
            <a class="nav-link navbar-brand text-white" href="/search">Find Rentals</a>
          </li>
           <li class= "nav-item px-2">
            <a class="nav-link navbar-brand text-white" href="/favorites">View Favorites</a>
          </li>
        </ul>
        <ul class="navbar-nav">
           <li class= "nav-item px-2">
            <a class="nav-link navbar-brand text-white" href="/login">Login</a>
          </li>
        </ul>
      </div>
    </nav>

    {{! Handlebars Content }}
    <main>
        {{{body}}}
