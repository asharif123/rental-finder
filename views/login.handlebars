<div class="flex-col md:flex-row bg-[url('/images/city-night.jpg')] min-w-100 focus:ring-2 focus:ring-cyan min-h-full flex items-center justify-around py-12 px-4 sm:px-6 lg:px-8">
  <div class="bg-[#4840FA] px-3 py-6 rounded-3xl">
    <div>
    </div>
    <form class="space-y-6 sign-form">
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="name" class="sr-only">Name</label>
          <input id="name-signup" name="name-signup" type="text" autocomplete="name" required class="px-3 py-2 rounded-xl sm:text-sm my-2" placeholder="Name">
        </div>

        <div>
          <label for="email-address" class="sr-only">Email address</label>
          <input id="email-signup" name="email-signup" type="email" autocomplete="email" required class="px-3 py-2 rounded-xl sm:text-sm my-2" placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password-signup" name="password-signup" type="password" autocomplete="current-password" required class="px-3 py-2 rounded-xl sm:text-sm my-2" placeholder="Password">
        </div>
      </div>

      <div>
        <button type="submit" class="bg-[#212529] group relative w-full flex justify-center py-2 px-4 border border-transparent rounded-full text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
          </span>
          Sign Up
        </button>
      </div>
    </form>
  </div>

  <div class="bg-[#4840FA] px-3 py-6 mt-3 rounded-2xl">
    <div>
    </div>
    <form class="space-y-6 login-form">
      <input type="hidden" name="remember" value="true">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="email-address" class="sr-only">Email address</label>
          <input id="email-login" name="email-signup" type="email" autocomplete="email" required class="px-3 py-2 rounded-xl sm:text-sm my-2" placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password-login" name="password-signup" type="password" autocomplete="current-password" required class="px-3 py-2 rounded-xl sm:text-sm my-2" placeholder="Password">
        </div>
      </div>

      <div>
        <button type="submit" class="bg-[#212529] group relative w-full flex rounded-2xl justify-center py-2 px-4 border border-transparent rounded-full  text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <!-- Heroicon name: solid/lock-closed -->
          </span>
          Login
        </button>
      </div>
    </form>
  </div>
</div>